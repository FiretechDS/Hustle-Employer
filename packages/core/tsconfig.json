{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "allowJs": false,
    "target": "ES6",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}